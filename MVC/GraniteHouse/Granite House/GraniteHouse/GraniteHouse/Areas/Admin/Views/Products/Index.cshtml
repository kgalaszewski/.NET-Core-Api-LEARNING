@model IEnumerable<Products>
@{
	ViewData["Title"] = "Index";
}

<br /><br />

<div class="row">
	<div class="col-6">
		<h2 class="text-info"> Products List</h2>
	</div>
	<div class="col-6 text-right">
		<a asp-action="Create" class="btn btn-info">&nbsp; Create New Product</a>
	</div>
</div>

<br />
<div>
	<table class="table table-striped border">
		<tr class="table-info">
			<th>@Html.DisplayNameFor(x => x.Id)</th>
			<th>@Html.DisplayNameFor(x => Model.FirstOrDefault().Name)</th>
			<th>@Html.DisplayNameFor(x => Model.FirstOrDefault().Price)</th>
			<th>@Html.DisplayNameFor(x => Model.FirstOrDefault().Available)</th>
			<th>@Html.DisplayNameFor(x => Model.FirstOrDefault().ProductType)</th>
			<th>@Html.DisplayNameFor(x => Model.FirstOrDefault().SpecialTag)</th>
			<th></th>
			<th></th>
		</tr>
		@foreach (var prooductType in Model)
		{
		<tr>
			<td>@Html.DisplayFor(x => prooductType.Id)</td>
			<td>@Html.DisplayFor(x => prooductType.Name)</td>
			<td>@Html.DisplayFor(x => prooductType.Price)</td>
			<td>@Html.DisplayFor(x => prooductType.Available)</td>
			<td>@Html.DisplayFor(x => prooductType.ProductType.Name)</td>
			<td>@Html.DisplayFor(x => prooductType.SpecialTag.Name)</td>
			<td><partial name="_TableButtonsPartial" model="prooductType.Id" /></td>
		</tr>
		}
	</table>
</div>