@model GraniteHouse.Models.Products
@{
	ViewData["Title"] = "Details";
}

<br /><br />
<h2>Product Details</h2>
<br />
<div class="form-group">
	<div class="p-4 border rounded row">
		<div class="col-8">
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Name"></label>
				</div>
				<div class="col-8">
					<label>@Html.DisplayFor(x => Model.Name)</label>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Price"></label>
				</div>
				<div class="col-8">
					<label>@Html.DisplayFor(x => Model.Price)</label>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="ProductType"></label>
				</div>
				<div class="col-8">
					<label>@Html.DisplayFor(x => Model.ProductType.Name)</label>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="SpecialTag"></label>
				</div>
				<div class="col-8">
					<label>@Html.DisplayFor(x => Model.SpecialTag.Name)</label>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="ShadeColor"></label>
				</div>
				<div class="col-8">
					<label>@Html.DisplayFor(x => Model.ShadeColor)</label>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Available"></label>
				</div>
				<div class="col-8">
					<label>@Model.Available</label>
				</div>
			</div>
		</div>
		<div class="col-1"></div>
		<div class="col-3">
			<img src="@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
		</div>
	</div>
	<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> <!-- asp-route-zmienna to zmienna musi miec taka sama nazwe w parametrze akcji controllera -->
	<a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

@section Scripts{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
