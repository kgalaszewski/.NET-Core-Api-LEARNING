@model ProductTypes
@{
	ViewData["Title"] = "Details";
}

<br />
<div class="form-group">
	<div class="p-4 border rounded">
		<div class="form-group row">
			<div class="col-1">
				<label asp-for="Id"></label>
			</div>
			<div class="col-4">
				<label>: @Html.DisplayFor(x => Model.Id)</label>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-1">
				<label asp-for="Name"></label>
			</div>
			<div class="col-4">
				<label>: @Html.DisplayFor(x => Model.Name)</label>
			</div>
		</div>
	</div>
	<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> <!-- asp-route-zmienna to zmienna musi miec taka sama nazwe w parametrze akcji controllera -->
	<a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

@section Scripts{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}