@model GraniteHouse.Models.ViewModel.ProductsViewModel
@using GraniteHouse.Extensions
@{
	ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create new Product</h2>

<div class="form-group">
	<form method="post" enctype="multipart/form-data">
		<div class="p-4 border rounded">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group row">
				<div class="col-2">
					<label asp-for="Products.Name"></label>
				</div>
				<div class="col-4">
					<input asp-for="Products.Name" />
				</div>
			</div>
			<div class="form-group row">
				<span asp-validation-for="Products.Name" class="text-danger"></span>
			</div>
			<div class="form-group row">
				<div class="col-2">
					<label asp-for="Products.Price"></label>
				</div>
				<div class="col-4">
					<input asp-for="Products.Price" />
				</div>
			</div>
			<div class="form-group row">
				<span asp-validation-for="Products.Price" class="text-danger"></span>
			</div>
			<div class="form-group row">
				<div class="col-2">
					<label asp-for="Products.Image"></label>
				</div>
				<div class="col-4">
					<input type="file" name="files" class="form-control" />
				</div>
			</div>
			<div class="form-group row">
				<div class="col-2">
					<label asp-for="Products.ProductType"></label>
				</div>
				<div class="col-4">
					<select asp-for="@Model.Products.ProductTypeId" asp-items="Model.ProductTypes.ToSelectListItem(Model.Products.ProductTypeId)" class="form-control"></select>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-2">
					<label asp-for="Products.SpecialTag"></label>
				</div>
				<div class="col-4">
					<select asp-for="@Model.Products.SpecialTagId" asp-items="Model.SpecialTags.ToSelectListItem(Model.Products.SpecialTagId)" class="form-control"></select>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-2">
					<label asp-for="Products.ShadeColor"></label>
				</div>
				<div class="col-4">
					<input asp-for="Products.ShadeColor" />
				</div>
			</div>
			<div class="form-group row">
				<span asp-validation-for="Products.ShadeColor" class="text-danger"></span>
			</div>
			<div class="form-group row">
				<div class="col-2">
					<label asp-for="Products.Available"></label>
				</div>
				<div class="col-4">
					<input type="checkbox" asp-for="Products.Available" />
				</div>
			</div>

			<div class="form-group row">
				<input type="submit" value="Create" />
			</div>
		</div>
	</form>
	<a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

@section Scripts{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}