@model IEnumerable<Products>
@{
	ViewData["Title"] = "Index";
}

<br /><br />



<br />
<div>
	@foreach (var prooductType in Model)
	{
		<div class="col-4">
			<div class="card mb-4">
				<div class="card-header">
					<h4 class="my-0 font-weight-normal">
						<label style="font-size:28px; color:steelblue;"> @prooductType.Name </label>
					</h4>
				</div>
				<img class="card-img-top" style="height:100%;" src="@prooductType.Image" alt="Card Image" />
				<div class="card-body">
					<div class="d-flex justify-content-between align-items-center">
						<div class="btn-group">
							<label style="font-size:20px; color:#a51313"><b>$@prooductType.Price</b></label>
						</div>
						<a asp-action="Details" asp-controller="Home" asp-route-Id="@prooductType.Id" class="btn btn-success pull-right btn-outline-info">View Details</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>